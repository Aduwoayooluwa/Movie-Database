---
import Menubar from "../components/Menubar";
import Navigation from "../components/navigation.astro";
import Discover from "../container/movies/discover.astro";
import Latest from "../container/movies/latest.astro";
import Nowplaying from "../container/movies/nowplaying.astro";
import Popular from "../container/movies/popular.astro";
import Toprated from "../container/movies/toprated.astro";
import Upcoming from "../container/movies/upcoming.astro";
import PopularPeople from "../container/people/popularPeople.astro";
import Banner from "../container/trending/Banner.astro";
import Trending from "../container/trending/trending.astro";
import Trendingtv from "../container/trending/trendingtv.astro";
import Weektrend from "../container/trending/weektrend.astro";
import AiringTodatTv from "../container/tv/airingTodatTv.astro";
import LatestTv from "../container/tv/latestTv.astro";
import PopularTv from "../container/tv/popularTv.astro";
import TopratedTv from "../container/tv/topratedTv.astro";
import UpcomingTV from "../container/tv/topratedTv.astro";
import { initialV, themeColor } from "../stores/menu";
import Button from "../components/Button";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>The Movie DB</title>
		<Navigation />

		
	</head>
	<body class={`${initialV.theme === 'dark' ? 'bg-slate-800' : 'bg-slate-200'} text-white`}>
		

		<section class="">
			<Menubar client:load/>		
			<Button name={'Change Theme'}>Change Theme</Button>
			<Banner />	
			<Discover />
			<Trending />
			<Nowplaying />
			<Popular />
			<Weektrend />
			<PopularPeople />
			<Upcoming />
			<Trendingtv />
			<TopratedTv />


		</section>
		<footer class="mt-5">
			<p class="font-medium text-center py-3">Built with <a class="underline" href="https://astro.build">astro.build</a> by <a class="underline" href="https://github.com/AduwoAyooluwa">Coding Pastor</a></p>
	
		</footer>
	</body>
</html>
